<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/myborder"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="111"
            android:orientation="vertical" >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding" >

                <TextView
                    style="@style/content_font"
                    android:paddingLeft="10dp"
                    android:text="订单号:" />

                <TextView
                    android:id="@+id/order_no"
                    style="@style/content_font"
                    android:text="2013021153146" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding" >

                <TextView
                    style="@style/content_font"
                    android:paddingLeft="10dp"
                    android:text="订单金额:" />

                <TextView
                    android:id="@+id/order_price"
                    style="@style/content_font"
                    android:textColor="@color/red"
                    android:text="112.20元" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding" >

                <TextView
                    style="@style/content_font"
                    android:paddingLeft="10dp"
                    android:text="下单时间:" />

                <TextView
                    android:id="@+id/order_time"
                    style="@style/content_font"
                    android:text="2013-10-26   12:50:40" />
            </LinearLayout>
            
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="#C6C6C6" />
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/content_padding" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/shouhuoren"
                    android:paddingTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/content_font"
                        android:text="收货人:" />

                    <TextView
                        android:id="@+id/order_consiginee"
                        style="@style/content_font"
                        android:text="卡拉斯" />
                    
                    <TextView
                        style="@style/content_font"
                        android:text="电话:" />

                    <TextView
                        android:id="@+id/order_phone"
                        style="@style/content_font"
                        android:text="15255555555" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tab"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/unconfirm"
                    android:gravity="center"
                    android:text="未确认"
                    android:visibility="gone"
                    android:textColor="@color/black" />
                
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding" >

                <TextView
                    style="@style/content_font"
                    android:paddingLeft="10dp"
                    android:text="收货人地址:" />

                <TextView
                    android:id="@+id/order_location"
                    style="@style/content_font"
                    android:text="北京市朝阳区**********" />
            </LinearLayout>
            
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="#C6C6C6" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding" >

                <ImageView
                    android:id="@+id/order_pic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/shangpintu" />
                
                <com.abt.seller.listtest.MusicListView
                    android:id="@+id/music_list_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shangpintu" />

                <TextView
                    style="@style/content_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="秋冬新款半身蕾丝蛋糕色XL" />
                
                <ImageView
                    android:id="@+id/order_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more_arrow" />
            </LinearLayout>
            
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="#C6C6C6" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding" >

                <TextView
                    style="@style/content_font"
                    android:textColor="@color/red"
                    android:text="订单状态:" />

                <TextView
                    android:id="@+id/order_status"
                    style="@style/content_font"
                    android:text="完成" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:visibility="gone" >

            <TextView
                android:id="@+id/confirm"
                android:layout_width="66dp"
                android:layout_height="38dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/back_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>