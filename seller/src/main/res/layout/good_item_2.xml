<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/yixiajia"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:id="@+id/last_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/last_order_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/content_font"
                    android:text="编号:" />

                <TextView
                    android:id="@+id/product_no"
                    style="@style/content_font"
                    android:text="2103021" />

                <TextView
                    style="@style/content_font"
                    android:paddingLeft="10dp"
                    android:text="," />

                <TextView
                    style="@style/content_font"
                    android:paddingLeft="10dp"
                    android:text="品名:" />

                <TextView
                    android:id="@+id/name"
                    style="@style/content_font"
                    android:text="九龙斋" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/last_order_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/content_font"
                    android:text="单价" />

                <TextView
                    android:id="@+id/price"
                    style="@style/content_font"
                    android:text="4.55" />

                <TextView
                    style="@style/content_font"
                    android:layout_below="@id/order_title"
                    android:paddingLeft="10dp"
                    android:text="," />

                <TextView
                    style="@style/content_font"
                    android:paddingLeft="10dp"
                    android:text="品牌:" />

                <TextView
                    android:id="@+id/brand"
                    style="@style/content_font"
                    android:paddingLeft="10dp"
                    android:text="九龙斋" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/content_font"
                    android:text="分类:" />

                <TextView
                    android:id="@+id/product_cata"
                    style="@style/content_font"
                    android:paddingLeft="10dp"
                    android:text="食品饮料/饮料/果汁" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_style_alert_dialog_button_normal"
                    android:gravity="center"
                    android:text="已下架"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>